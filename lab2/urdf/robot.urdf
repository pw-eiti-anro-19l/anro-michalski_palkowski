<robot name="robot">
	<link name="link1" />
	<link name="link2" />
	<link name="link3" />

	<joint name="joint1" type="prismatic">
		<parent link="link1"/>
		<child link="link2"/>
		<origin xyz="10 0 0" rpy="0 0 0" />
	</joint>

	<joint name="joint2" type="continous">
		<parent link="link1"/>
		<child link="link2"/>
		<origin xyz="10 0 0" rpy="0 0 0" />
	</joint>

	<joint name="joint3" type="prismatic">
		<parent link="link2"/>
		<child link="link3" />
	</joint>

	<joint name="joint4" type="continous">
		<parent link="link2"/>
		<child link="link3"/>
	</joint>
</robot>